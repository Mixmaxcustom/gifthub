<div class="mt-3">
    <h1>{{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>
<form role="form" id="add-gift-form">
    <div class="form-group">
        <label for="input-gift-name">Gift Name</label>
        <input type="text" class="form-control" id="input-gift-name" placeholder="Gift Name" required>
    </div>
    <div class="form-group">
        <label for="input-gift-description">Description</label>
        <input type="text" class="form-control" id="input-gift-description" placeholder="Description" required>
    </div>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-gift-manufacturer">Manufacturer</label>
                <input type="text" class="form-control" id="input-gift-manufacturer" placeholder="Manufacturer" required>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="input-gift-model-num">Part Number</label>
                <input type="text" class="form-control" id="input-gift-model-num" placeholder="ISBN Number" required>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="input-gift-url1">Manufacturer URL</label>
                <input type="url" class="form-control" id="input-gift-url1" placeholder="http://www.url.com">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-gift-url1">Item URL</label>
                <input type="url" class="form-control" id="input-gift-url1" placeholder="http://www.url.com">
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label for="input-gift-photo">Item Photo URL</label>
                <input type="url" class="form-control" id="input-gift-photo" placeholder="http://www.url.com">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-giftprice">Price</label>
                <input type="number" class="form-control" id="input-giftprice" placeholder="0.00">
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <select id="categories-menu" class="custom-select" multiple>
                    <option selected> item categories </option>
                    <option value="1"></option>
                </select>
            </div>
        </div>
    </div>
    <button type="submit" id="add-gift-submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" href="/gifts">Cancel</a>
</form>
</div>

