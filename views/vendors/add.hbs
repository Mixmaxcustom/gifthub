<div class="mt-3">
    <h1>{{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>
<form role="form" id="add-vendor-form">
    <div class="form-group">
        <label for="input-vendor-name">Vendor Name</label>
        <input type="text" class="form-control" id="input-vendor-name" placeholder="Vendor Name" required>
    </div>

    <div class="form-group">
        <label for="input-vendor-description">Description</label>
        <input type="text" class="form-control" id="input-vendor-description" placeholder="Description" required>
    </div>
   <div class="form-group">
        <label for="input-vendor-url">Vendor URL</label>
        <input type="text" class="form-control" id="input-vendor-url" placeholder="URL" required>
    </div>
    <button type="submit" id="add-vendor-submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" href="/vendors">Cancel</a>
</form>
</div>

