
{{!-- Add Recipient Modal --}}

<div id="add_new_recipient" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4 id="add-recipient-title">Add New Recipient</h4>
        <form>
            <div class="row">
                <div class="input-field col s12">
                    <label for="recipient_title">Title</label>
                    <input id="recipient_title" type="text" class="validate">
                </div>
            </div>
            <div class="row">
                <div class="input-field col m6 s12">
                    <input id="recipient_firstname" type="text" class="validate">
                    <label for="recipient_firstname">First Name</label>
                </div>
                <div class="input-field col m6 s12">
                    <input id="recipient_lastname" type="text" class="validate">
                    <label for="recipient_lastname">Last Name</label>
                </div>
            </div>
            <div class="row">

                <div class="input-field col m3 s12">
                    <input id="recipient_birthday" type="text" class="datepicker validate">
                    <label for="recipient_birthday">Birthday</label>
                </div>

                <div class="input-field col m9 s12">
                    <input id="recipient_email" type="email" class="validate">
                    <label for="recipient_email">Email (optional)</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col m3 s12">
                    <input id="recipient_budget" type="number"></input>
                    <label for="recipient_budget">Budget</label>
                </div>
                <div class="input-field col m9 s12">
                    <input id="recipient_bio" type="text"></input>
                    <label for="recipient_bio">Details</label>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a id="recipient_registration_close" class="modal-action modal-close waves-effect waves-green btn-flat">
            <i class="material-icons left">close</i>Close</a>
        <a id="recipient_registration_submit" class="modal-action modal-close waves-effect waves-green btn-flat">
            <i class="material-icons left">person_add</i>Add</a>
    </div>
</div>


<!--  User Profile Modal -->
<div id="edit-user-modal" data-value="" class="modal">
    <div class="modal-content">
        <h4 id="edit-user-title">User Profile</h4>

        <form>
            <div class="row">
                <div class="input-field col s6">
                    <input id="user-edit-firstname" type="text" class="validate" value="{{user.user_firstname}}">
                    <label for="user-edit-firstname">First Name</label>
                </div>
                <div class="input-field col s6">
                    <input id="user-edit-lastname" type="text" class="validate" value="{{user.user_lastname}}">
                    <label for="user-edit-lastname">Last Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="user-edit-email" type="email" class="validate" value="{{user.user_email}}">
                    <label for="user-edit-email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="user-edit-password" type="password" class="validate" value="{{user.user_password}}">
                    <label for="user-edit-password">Password</label>
                </div>
                <div class="input-field col s6">
                    <input id="user-edit-password-confirm" type="password" class="validate">
                    <label for="user-edit-password-confirm">Confirm</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="user-edit-city" type="text" class="validate" value="{{user.user_city}}">
                    <label for="user-edit-city">City</label>
                </div>
                <div class="input-field col s6">
                    <select id="user-edit-state"></select>
                    <label for="user-edit-state">State</label>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a id="user-edit-close" class="modal-action modal-close waves-effect waves-green btn-flat">
            <i class="material-icons left">close</i>Close</a>
        <a id="user-edit-submit" data-value="{{id}}" class="modal-action modal-close waves-effect waves-green btn-flat">
            <i class="material-icons left">person_add</i>Update</a>
    </div>
</div>


 <!-- Recipients Modal -->

 <div id="recipients-list-modal" class="modal bottom-sheet">
     <div class="modal-content">
     <h4>Your Recipients</h4>
     <ul class="collection">
         {{#each recipients as | recipient |}}

            <li class="collection-item avatar">
                <img src="{{recipient.recipient_photo}}" alt="" class="circle">
                <span class="title">{{recipient.recipient_firstname}}</span>
                <p>{{recipient.recipient_bio}}</p>
                <a href="#!" data-value="{{recipient.id}}" gift-id="-1" class="secondary-content recipient-list-check"><i class="material-icons">crop_din</i></a>  <!--check_circle-->
            </li>
        {{/each}}
      </ul>
     </div>
 </div>


 <!-- Saved Gifts Modal -->

 <div id="saved-gifts-modal" class="modal bottom-sheet">
     <div class="modal-content">
     <h4>Saved Gifts</h4>
     <ul class="collection">
         {{#each gifts as | gift |}}

            <li class="collection-item avatar">
                <img src="{{gift.gift_photo}}" alt="" class="circle">
                <span class="title">{{gift.gift_name}}</span>
                <p>{{gift.gift_description}}</p>
                <a href="#!" data-value="{{gift.gift_id}}" gift-id="-1" class="secondary-content recipient-list-check"><i class="material-icons">crop_din</i></a>  <!--check_circle-->
            </li>
        {{/each}}
      </ul>
     </div>
 </div>


<!-- Confirmation Dialog -->
