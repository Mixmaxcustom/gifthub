
<!-- Recipient Detail Card -->

<div class="row">
<div class="col s12 m6">
        <div class="card medium">
            <div class="card-image waves-effect waves-block waves-light crop">
            <!-- <div class="card-image waves-effect waves-block waves-light"> -->
                <!-- <img class="responsive-img" src="{{photo}}"> -->
                <img src="{{photo}}">
        </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">{{name}}
                    <i class="material-icons right">more_vert</i>
                </span>
            <p>Gift Budget Total: $0 of ${{shortPrice max_budget}}</p>
        </div>
        <div class="card-reveal">
                <span class="card-title activator grey-text text-darken-4">{{name}}</span>
                <!-- <span class="card-title grey-text text-darken-4">{{title}} -->
                    <i class="material-icons right">close</i>
                </span>
                <p>{{bio}}</p>
            <p>Birthday: {{birthday}}</p>
            <p>Gift Budget Total: $0 of ${{shortPrice max_budget}}</p>
            <div id="saved-gifts-container">
                {{#each gifts as | gift |}} {{> recipients/recipient-gift-collection}} {{/each}} {{!-- Row End --}}
            </div>
        </div>
    </div>
</div>
