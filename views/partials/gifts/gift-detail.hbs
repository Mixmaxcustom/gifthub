<!-- Gift Result Item -->
<div class="card">
    <div class="card-image waves-effect waves-block waves-light crop">
        <a href="{{gift_url}}" class="btn-floating btn-large btn-price waves-effect waves-light accent-4 teal">${{formatPrice gift_price}}</a>
        <a href="#"><img class="responsive-img object-fit_fill" src="{{gift_photo}}" alt="item-img"></a>
    </div>
    <ul class="card-action-buttons">
        <li>
            <a data-value="{{id}}" data-action="add-gift" class="btn-floating gift-action waves-effect waves-light teal lighten-3">
                <i class="material-icons">add_circle</i>
            </a>
        </li>
        <li>
            <a data-value="{{id}}" data-action="favorite-git" class="btn-floating gift-action waves-effect waves-light teal lighten-2">
                <i class="material-icons">favorite</i>
            </a>
        </li>
        <li>
            <a class="btn-floating waves-effect waves-light teal lighten-1">
                <i class="material-icons activator">info_outline</i>
            </a>
        </li>
    </ul>
    <div class="card-content">
        <div class="row">
            <div class="col s12">
                <p class="card-title grey-text text-darken-4">
                    <a href="#" class="grey-text text-darken-4">{{gift_name}}</a>
                </p>
            </div>
        </div>
    </div>
    <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">
            <i class="material-icons right">close</i>{{gift_name}}</span>
        <p>{{gift_description}}</p>
    </div>
</div>
