<div class="mt-3">
	<h1><i class="fas fa-sm fa-book"></i>  {{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Category</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		{{#each categories as | category |}}
		<tr data-value="{{category.category_id}}" table-name="{{table}}">

			<td id="data-field">
				<span class="text-capitalize">{{category.category_name}}</span>
				<input type='text' class='edit' style='display: none;'>
			</td>

			<td id="data-field">
				<span>{{category.category_description}}</span>				
				<input type='text' class='edit' style='display: none;'>
			</td>

		</tr>
		{{/each}}
	</tbody>
</table>

<a class="btn btn-primary" href="/categories/add">New Category</a>