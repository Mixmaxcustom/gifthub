<div class="row">
    <form>
        <!-- removed valign-wrapper -->
        <div class="row form-row">

            <div class="input-field col s12 l3">

                {{!-- Categories Menu --}}
                <select id="gift_category_menu">
                    <!-- <option value="" disabled selected>Gift Type</option> -->
                    {{#each categories as | category |}}
                        <option value="{{category.category_id}}" data-value="{{category.category_name}}">{{category.category_description}}</option>
                    {{/each}}

                </select>
                <label>Gift Type</label>
            </div>

                {{!-- Keywords --}}
            <div class="input-field col s12 l3">
                <!-- <label for="keyword">Search By</label> -->
                <input placeholder="Keyword" id="keyword" type="text">
                <label for="keyword">Search By</label>
            </div>

            {{!-- Price Menu --}}
            <div class="input-field col s12 l3">
                <select id="max-price">
                    <option value="" disabled selected>Maximum Price</option>
                    <option value="2500">$25</option>
                    <option value="5000">$50</option>
                    <option value="10000">$100</option>
                    <option value="20000">$200</option>
                    <option value="30000">$300</option>
                    <option value="50000">$500</option>
                    <option value="100000">$1000</option>
                </select>
                <label>Maximum Price</label>
            </div>

            <div class="col sm12 l3 search-btn-wrapper">
                <a id="search-submit-btn" class="btn blue-grey"><i class="material-icons left">search</i> Search</a>
            </div>

        </div>
</form>
</div>
