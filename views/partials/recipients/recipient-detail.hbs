<!-- Recipient Detail Card -->

<div class="col s12 m6">
    <div id="recipient-card" class="card large">
        <div id="recipient-card-image" class="card-image waves-effect waves-block waves-light">
            <img class="responsive-img" src="{{photo}}">
        </div>
        <div id="recipient-card-content" class="card-content">
            <span id="recipient-card-title" class="card-title activator grey-text text-darken-4">{{name}}
                <i class="material-icons right">more_vert</i>
            </span>
            <p>Gift Budget Total: ${{currentTotal}} of ${{shortPrice budget}}</p>
        </div>

        <!--  reveal space -->
        <div class="card-reveal">
            <span class="card-title activator grey-text text-darken-4">{{name}}
                <i data-value="{{id}}" class="material-icons edit-recipient-button">edit</i>
                <i class="material-icons right">close</i>
            </span>

            <hr id="recipient-hr">
                <!-- added a table to neaten up this section for mobile -Michael -->

                <table data-value="{{RecipientId}}" class="recipient-details truncate">
                    <tbody>
                        <tr>
                            <th class="grey-text">bio</th>
                            <td><span class="black-text" alt="{{bio}}">{{bio}}</span></td>
                        </tr>
                        <tr>
                            <th class="grey-text">birthday</th>
                            <td>{{formatTime birthday 'MMMM, DD YYYY'}}</td>
                        </tr>
                        <tr>
                            <th class="grey-text">budget</th>
                            <td>${{currentTotal}} of ${{shortPrice budget}}</td>
                        </tr>
                    </tbody>
                </table>

            <hr id="recipient-hr">

            <div id="saved-gifts-container">
                {{#each gifts as | gift |}}
                    {{> recipients/recipient-gift-collection}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
