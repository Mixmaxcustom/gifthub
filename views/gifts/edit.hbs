<div class="mt-3">
    <h1>{{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>
<form role="form" id="edit-gift-form">
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-gift-name">Gift Name</label>
                <input type="text" class="form-control" id="input-gift-name" value="{{gift.gift_name}}" required>
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label for="input-gift-model-num">Part Number</label>
                <input type="text" class="form-control" id="input-gift-model-num" value="{{gift.gift_model_num}}" required>
            </div>
        </div>
    </div>
        <div class="form-group">
            <label for="input-gift-description">Description</label>
            <input type="text" class="form-control" id="input-gift-description" value="{{gift.gift_description}}" required>
        </div>

        <div class="form-row">
            <div class="col">
                <div class="form-group">
                    <label for="input-gift-url">Amazon URL</label>
                    <input type="url" class="form-control" id="input-gift-url" value="{{gift.gift_url}}" required>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="input-gift-photo">Item Photo</label>
                    <input type="url" class="form-control" id="input-gift-photo" value="{{gift.gift_photo}}">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <div class="form-group">
                    <label for="input-gift-price">Price</label>
                    <input type="number" class="form-control" id="input-gift-price" value="{{gift.gift_price}}" required>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <select id="categories-menu" class="custom-select" multiple>
                        <option selected> item categories </option>
                        <option value="1"></option>
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" id="edit-gift-submit" data-value="{{gift.gift_id}}" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" href="/gifts">Cancel</a>
</form>
</div>