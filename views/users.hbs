<div class="mt-3">
	<h1>
		<i class="fas fa-sm fa-user-circle"></i> {{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Birthday</th>
			<th>Location</th>
			<th>Email</th>
		</tr>
	</thead>
	<tbody>
		{{#each users as | user |}}
		<tr data-value="{{user.user_id}}" table-name="{{../table}}">
			<td id="data-field">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="admin-user-name-check" data-value="{{user.user_id}}">
					<label class="form-check-label" for="admin-user-name-check">{{user.user_firstname}} {{user.user_lastname}}</label>
					<!-- <input type='text' class='edit' style='display: none;'> -->
				</div>
			</td>

			<td id="data-field">
				<span>{{formatTime user.user_birthday "MMM. D, YYYY"}}</span>
				<!-- <span>{{user.user_birthday}}</span> -->
				<input type='text' class='edit' style='display: none;'>
			</td>

			<td id="data-field">
				<span>{{user.user_city}}, {{user.user_state}}</span>
				<input type='text' class='edit' style='display: none;'>
			</td>

			<td>
				<a href="mailto:'{{user.user_firstname}} {{user.user_lastname}}'<{{user.user_email}}>">{{user.user_email}}</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<a class="btn btn-primary" href="/users/add">Add User</a>
<a id="edit-user-button" class="btn btn-primary disabled" href="">Edit User</a>
<a id="delete-user-button" class="btn btn-secondary" href="">Delete User</a>
