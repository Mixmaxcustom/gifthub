 {{!-- User Profile Widget (Bootstrap 4) --}}

<div class="row justify-content-md-center">
    <div class="col-lg-6 col-sm-10 m-auto">

        <!-- Profile Card -->
        <div class="card text-center user-profile-card" data-value="{{user.UserId}}">
            <div class="card-body">

                {{!-- User Photo --}}
                <div class="col">
                    <img class="rounded-circle img-profile-sm " src="{{user.user_photo}}">
                </div>

                <h2 class="card-title">{{user.user_firstname}} {{user.user_lastname}}</h2>
                <p>{{user.user_city}}, {{user.user_state}}</p>
                <p class="lead">Birthday: {{formatTime user.user_birthday "MMMM dd, YYYY"}}</p>
                <p class="card-text">{{user.user_bio}}</p>

                {{!-- User Interest Badges --}}
                <div class="tags-list-container">

                    <ul class="list-inline tags-list-inline">

                        {{#each categories as | category |}}
                            <li data-value="{{category.category_id}}" class="list-inline-item">
                                <span class="badge badge-pill badge-primary">{{category.category_name}}</span>
                            </li>
                        {{/each}}

                    </ul>

                    {{!-- Interest Editor (todo) --}}
                    <input id="tags-edit-input" class="d-none" type="text">
                </div>

                <a href="/profile/{{user.UserId}}" class="btn btn-primary detail-edit-button">Edit</a>

            </div>
        </div>
    </div>
</div>
