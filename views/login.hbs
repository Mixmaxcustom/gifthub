<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <br>
        <br>
        <h1 class="header center">Login</h1>
        <div class="row center">
            <h5 class="header col s12 light">Please sign in with your email address.</h5>
        </div>
        <form id="user_login_form"> 


            <div class="row">
                <div class="input_field col s12">
                    <label for="input_user_email">Email Address</label>
                    <input id="input_user_email" type="email" class="validate">
                </div>
            </div>


            <div class="row">
                <div class="input_field col s12">
                    <label for="input_user_password">Password</label>
                    <input id="input_user_password" type="password" class="validate">                    
                </div>
            </div>

            <div class="row">
                <div class="col s12">


                    {{!-- login error alert --}}

                   <div id="card-login-alert" class="card red lighten-5 hide">
                      <div class="card-content red-text">
                        <p><span style="font-weight: 900; color: #d21d0f">Error: </span><span id="login-error-msg">this is an error</span></p>
                      </div>
                    </div>

                </div>
            </div>


            <div class="row">
                <div class="col offset-s1">
                    <input type="checkbox" id="input_set_cookie" />
                    <label for="input_set_cookie">keep me logged in</label>
                </div>
            </div>





            <div class="row center">
                <input id="user_login_submit" type="submit" class="btn light-blue darken-1" value="Submit">
            </div>
        </form>
        <br>
        <br>
    </div>
</div>