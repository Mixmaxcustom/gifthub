<div class="mt-3">
	<h1><i class="fas fa-sm fa-address-book"></i> {{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>

<div class="row">
	<div class="col">
		<div class="dt-buttons btn-group">
			<a id="add-vendor-button" class="btn btn-primary detail-add-button" href="/vendors/add">New</a>
			<a id="edit-vendor-button" class="btn btn-primary detail-edit-button disabled" href="">Edit</a>
			<a id="delete-vendor-button" class="btn btn-primary detail-delete-button disabled" href="">Delete</a>
		</div>
	</div>
	
	<div class="ml-auto p-2">
		<form class="form-inline my-2 my-md-0">
			<input id="detail-search-form" class="form-control" type="text" placeholder="Search" aria-label="Search">
		</form>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		{{!-- table --}}
		<table id="vendor-list-table" url-routing="vendors" class="table table-striped table-bordered detail-table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th>URL</th>
				</tr>
			</thead>
			<tbody>
				{{#each vendors as | vendor |}}
				<tr data-value="{{vendor.vendor_id}}" table-name="{{../table}}">
					<td id="data-field">
						<span>{{vendor.vendor_name}}</span>
					</td>

					<td id="data-field">
						<span>{{vendor.vendor_description}}</span>
						<input type='text' class='edit' style='display: none;'>
					</td>

					<td>
						<a href="{{vendor.vendor_url}}">Link</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-5">
		Showing {{vendorcount}} Entries
	</div>
	{{!-- pagination --}}
	<div class="col-sm-12 col-md-5">
	</div>
</div>