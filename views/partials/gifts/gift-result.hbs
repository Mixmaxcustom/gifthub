<div class="col s6 m4">
    <div class="card small">
        <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="{{gift.gift_photo}}">
        </div>
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{gift.gift_name}}
                <i class="material-icons right">more_vert</i>
            </span>
            <p>
                <a href="{{gift.gift_url}}">Link</a>
            </p>
        </div>
        <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">Card Title
                <i class="material-icons right">close</i>
            </span>
            <p>{{gift.gift_description}}</p>
        </div>
    </div>
</div>