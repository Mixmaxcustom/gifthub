<div class="mt-3">
	<h1>
		<i class="fas fa-sm fa-gift"></i> {{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>

<div class="row">
	<div class="col">
		<div class="dt-buttons btn-group">
			<a id="add-gift-button" class="btn btn-primary detail-add-button" href="/gifts/add">New</a>
			<a id="edit-gift-button" class="btn btn-primary detail-edit-button disabled" href="">Edit</a>
			<a id="delete-gift-button" class="btn btn-primary detail-delete-button disabled" href="">Delete</a>
		</div>
	</div>

	<div class="ml-auto p-2">
		<form class="form-inline my-2 my-md-0">
			<input class="form-control" type="text" placeholder="Search" aria-label="Search">
		</form>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		{{!-- table --}}
		<table id="gift-list-table" url-routing="gifts" class="table table-striped table-bordered detail-table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Manfacturer</th>
					<th>Price</th>
					<th>Category</th>
					<th>URL</th>
				</tr>
			</thead>
			<tbody>
				{{#each gifts as | gift |}}
				<tr data-value="{{gift.gift_id}}" table-name="{{../table}}">
					<td>{{gift.gift_name}}</td>
					<td><a href="{{gift.manufacturer_url}}">{{gift.gift_manufacturer}}</a></td>
					<td>${{gift.gift_price}}</td>
					<td>-</td>
					<td><a href="{{gift.gift_url}}" target="_blank">link</a></td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-5">
		Showing {{giftcount}} Entries
	</div>
	{{!-- pagination --}}
	<div class="col-sm-12 col-md-5">
	</div>
</div>
