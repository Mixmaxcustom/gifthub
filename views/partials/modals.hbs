{{!-- Edit Recipient Modal --}}

<div id="edit-recipient-modal" data-value="" class="modal">
    <div class="modal-content">
        <h4 id="edit-recipient-title">Edit Recipient</h4>
        <form>
            <div class="row">
                <div class="input-field col s12">
                    <input id="recipient_title_edit" type="text" class="validate active" value="{{title}}">
                    <label for="recipient_title_edit" class="active">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col m6 s12">
                    <input id="recipient_firstname_edit" type="text" class="validate" value="{{recipient_firstname}}">
                    <label for="recipient_firstname_edit">First Name</label>
                </div>
                <div class="input-field col m6 s12">
                    <input id="recipient_lastname_edit" type="text" class="validate" value="{{recipient_lastname}}">
                    <label for="recipient_lastname_edit">Last Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="recipient_email_edit" type="email" class="validate" value="{{recipient_email}}">
                    <label for="recipient_email_edit">Email (optional)</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col m4">
                    <input id="recipient_birthday_edit" type="text" class="datepicker validate" value="{{recipient_birthday}}">
                    <label for="recipient_birthday">Birthday</label>
                </div>

                <div class="input-field col m4">
                    <input id="recipient_city_edit" type="text" value="{{recipient_city}}">
                    <label for="recipient_city_edit">City</label>
                </div>
                <div class="input-field col m4">
                    <select id="recipient_state_edit" data-value=""  class="center-align validate" placeholder="State" required="required"></select>
                    <!-- <input id="recipient_state_edit" class="validate" value="{{recipient_state}}"> -->
                    <label for="recipient_state_edit">State</label>
                </div>
            </div>


            <div class="row">
                <div class="input-field col m3 s12">
                    <input id="recipient_budget_edit" type="number" value="{{recipient_budget}}"></input>
                    <label for="recipient_budget_edit">Budget</label>
                </div>
                <div class="input-field col m9 s12">
                    <input id="recipient_bio_edit" type="text"></input>
                    <label for="recipient_bio_edit">Details</label>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a id="recipient-edit-close" class="modal-action modal-close waves-effect waves-green btn-flat">
            <i class="material-icons left">close</i>Close</a>
        <a id="recipient-edit-submit" data-value="{{id}}" class="modal-action modal-close waves-effect waves-green btn-flat">
            <i class="material-icons left">person_add</i>Update</a>
    </div>
</div>
