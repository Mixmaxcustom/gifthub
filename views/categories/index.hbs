<!--  Category Detail Page (Bootstrap 4) -->
<div class="mt-3">
	<h1><i class="fas fa-sm fa-book"></i> {{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>

<div class="row">

	{{#if is_logged_in}}

		<div class="col">
			<div class="dt-buttons btn-group">
				<a id="add-category-button" class="btn btn-primary detail-add-button" href="/categories/add">New</a>
				<a id="edit-category-button" class="btn btn-primary detail-edit-button disabled" href="">Edit</a>
				<a id="delete-category-button" class="btn btn-primary detail-delete-button disabled" href="">Delete</a>
			</div>
		</div>

	{{/if}}

	<!-- Search Form -->
	<div class="ml-auto p-2">
		<form class="form-inline my-2 my-md-0">
			<input id="detail-search-form" class="form-control" type="text" placeholder="Search" aria-label="Search">
		</form>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		{{!-- table --}}
		<table id="category-list-table" url-routing="categories" class="table table-striped table-bordered detail-table">
			<thead>
				<tr>
					<th>Category</th>
					<th class="text-center">Ideal Age</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody>
				{{#each categories as | category |}}
				<tr class="detail-table-row" data-value="{{category.category_id}}" table-name="{{table}}">

					<td id="data-field">
						<span class="text-capitalize">{{category.category_name}}</span>
						<input type='text' class='edit' style='display: none;'>
					</td>

					<td id="data-field" class="text-center">
						<span>{{category.category_age_limit}}</span>
						<input type='text' class='edit' style='display: none;'>
					</td>

					<td id="data-field">
						<span>{{category.category_description}}</span>
						<input type='text' class='edit' style='display: none;'>
					</td>

				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-5">
		Showing {{category_count}} Entries
	</div>
	{{!-- pagination --}}
	<div class="col-sm-12 col-md-5">
	</div>
</div>
