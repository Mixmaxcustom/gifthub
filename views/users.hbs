<div class="mt-3">
	<h1><i class="fas fa-sm fa-user-circle"></i> {{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>

<div class="row">
	<div class="col">
		<div class="dt-buttons btn-group">
			<a id="add-user-button" class="btn btn-primary detail-add-button" href="/users/add">New</a>
			<a id="edit-user-button" class="btn btn-primary detail-edit-button disabled" href="">Edit</a>
			<a id="delete-user-button" class="btn btn-primary detail-delete-button disabled" href="">Delete</a>
		</div>
	</div>
	
	<div class="ml-auto p-2">
		<form class="form-inline my-2 my-md-0">
			<input id="detail-search-form" class="form-control" type="text" placeholder="Search" aria-label="Search">
		</form>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		{{!-- table --}}
		<!--  <table id="user-list-table" class="table table-striped table-bordered table-hover"> -->
		<table id="user-list-table" url-routing="users" class="table table-striped table-bordered detail-table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Birthday</th>
					<th>Location</th>
					<th>Email</th>
				</tr>
			</thead>
			<tbody>
				{{#each users as | user |}}
				<tr data-value="{{user.user_id}}" table-name="{{../table}}">
					<td id="data-field">
						<span>{{user.user_firstname}} {{user.user_lastname}}</span>
						<!-- <input type='text' class='edit' style='display: none;'> -->
					</td>

					<td id="data-field">
						<span>{{formatTime user.user_birthday "MMM. D, YYYY"}}</span>
						<!-- <span>{{user.user_birthday}}</span> -->
						<input type='text' class='edit' style='display: none;'>
					</td>

					<td id="data-field">
						<span>{{user.user_city}}, {{user.user_state}}</span>
						<input type='text' class='edit' style='display: none;'>
					</td>

					<td>
						<a href="mailto:'{{user.user_firstname}} {{user.user_lastname}}'<{{user.user_email}}>">{{user.user_email}}</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-sm-12 col-md-5">
		Showing {{usercount}} Entries
	</div>
	{{!-- pagination --}}
	<div class="col-sm-12 col-md-5">
	</div>
</div>