<div class="mt-3">
    <h1>{{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>
<form role="form" id="edit-user-form">
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-user-firstname">First Name</label>
                <input type="text" class="form-control" id="input-user-firstname" value="{{user.user_firstname}}" required>
                <!-- invalid message -->
                <div class="invalid-feedback">
                    Please provide a valid city.
                </div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="input-user-lastname">Last Name</label>
                <input type="text" class="form-control" id="input-user-lastname" value="{{user.user_lastname}}" required>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-user-email">Email address</label>
                <input type="email" class="form-control" id="input-user-email" value="{{user.user_email}}" required>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="input-user-birthday">Birthday</label>
                <input type="date" class="form-control" id="input-user-birthday" value="{{user.user_birthday}}" required>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-user-city">City</label>
                <input type="text" class="form-control" id="input-user-city" value="{{user.user_city}}" required>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="input-user-state">State</label>
                <select id="input-user-state" class="form-control">
                    <option value="{{user.user_state}}" hidden="hidden" selected="selected">{{user.user_state}}</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <label for="input-user-login">Login Name</label>
                <input type="text" class="form-control" id="input-user-login" value="{{user.user_login}}">
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="input-user-password">Password</label>
                <input type="password" class="form-control" id="input-user-password" placeholder="Password">
            </div>
        </div>
    </div>
    <button type="submit" id="edit-user-submit" data-value="{{user.user_id}}" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" href="/users">Cancel</a>
</form>
</div>
