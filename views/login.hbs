<div class="mt-3">
    <h1>{{pagetitle}}</h1>
</div>
<p class="lead">{{content}}</p>
<form role="form" id="user-login-form">
    <div class="form-group">
        <label for="input-user-login">Username</label>
        <input type="text" class="form-control" id="input-user-login" required>
    </div>
    <div class="form-group">
        <label for="input-user-password">Password</label>
        <input type="password" class="form-control" id="input-user-password" required>
        <br />
        <div id="login-error-alert" class="alert alert-danger d-none"> 
            <strong>Error: </strong><span id="user-login-error">incorrect password</span>          
        </div>
    </div>
    <button type="submit" id="user-login-submit" class="btn btn-primary">Submit</button>
</form>